<Window x:Class="mpMeshesSA.ShowImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        mc:Ignorable="d" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        SizeToContent="WidthAndHeight"
        Icon="MpMeshes_32x32.ico"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        MouseLeftButtonDown="ShowImageWindow_OnMouseLeftButtonDown">
    <StackPanel Orientation="Vertical">
        <ScrollViewer MaxHeight="600" Margin="3" MaxWidth="600"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
            <Image Name="Img"
                   Stretch="None">
            </Image>
        </ScrollViewer>
        <Button Name="BtOk" Click="BtOk_Click"
                    HorizontalAlignment="Center"
                    MinWidth="75" Content="Закрыть" Margin="2"></Button>
    </StackPanel>
</Window>

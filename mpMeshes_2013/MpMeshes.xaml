                                            Interval="1" LargeChange="1" Delay="5" Value="3" IsSnapToTickEnabled="True" />
                                <TextBlock Name="TbThirdRound" VerticalAlignment="Center" Text="3" Margin="5,0,0,0"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Button Grid.Row="2" Content="{Binding Source={StaticResource Lang}, XPath=insert}" MinWidth="75" Margin="2"
                                Name="BtThirdAdd" HorizontalAlignment="Center" Click="BtThirdAdd_Click"></Button>
                </Grid>
            </mah:MetroTabItem>
        </mah:MetroTabControl>
        <TextBlock Grid.Row="2" TextWrapping="Wrap" Name="TbMessage"
                       HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
    </Grid>
</mpc:BaseMetroWindow>

